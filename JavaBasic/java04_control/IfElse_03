package java04_control.condition;

public class IfElse_03 {
	public static void main(String[] args) {
		
		int num = 5;
		
		if ( num>0 ) {//양수
			System.out.println("양수");
		} else {// num<=0, 음수 or 0
			System.out.println("양수가 아닙니다");
			
			//제어문 안에 제어문을 줄 수 있다.
			if( num ==0 ) { //0
				
			}else {// 음수
				
			}
		}
		
	}

}
