package java03_scanner;

import java.util.Scanner;//외부 패키지에 있는 클래스를 사용할 수 있도록 선언하는 코드

public class ScannerEx_01 {
	public static void main(String[] args) {
		
		int num; //변수 선언, 기본 데이터 타입
		num= 123;//값을 대입
		
		Scanner input;//입력객체 변수 선언
		input = new Scanner(System.in);//대입하기의 변형..
		
		System.out.print("문자열 입력 : ");
		String text = input.nextLine(); //문자열 입력처리
		
		//nextLine(); //입력한 문자열을 처리하는 메소드(기능)
		
		System.out.println("입력한 문자열 : "+ text);
		
		
		
	}
	
}
